## Files and cwd
FILE="$HOME/.cache/eww_launch.dashboard"
# CFG="$HOME/.config/eww"
CFG="$HOME/developer/nix/nix-config/modules/home-manager/desktops/eww/dashboard"
EWW=`which eww`

## Run eww daemon if not running already
if [[ ! `pidof eww` ]]; then
	${EWW} daemon
	sleep 1
fi

## Open widgets
run_eww() {
	${EWW} --config "$CFG" open-many \
		   clock leftdash sysbars network
}

## Launch or close widgets accordingly
if [[ ! -f "$FILE" ]]; then
	touch "$FILE"
	run_eww
else
	${EWW} --config "$CFG" close \
					clock leftdash sysbars network
	rm "$FILE"
fi
